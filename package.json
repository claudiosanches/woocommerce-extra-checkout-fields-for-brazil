{
	"name": "@claudiosanches/brazilian-market-on-woocommerce",
	"version": "4.0.0",
	"description": "Brazilian Market on WooCommerce",
	"author": {
		"name": "Claudio Sanches",
		"url": "https://claudiosanches.com"
	},
	"license": "GPL-3.0+",
	"keywords": [
		"wordpress",
		"woocommerce",
		"wordpress-plugin"
	],
	"homepage": "https://github.com/claudiosanches/woocommerce-extra-checkout-fields-for-brazil",
	"repository": {
		"type": "git",
		"url": "https://github.com/claudiosanches/woocommerce-extra-checkout-fields-for-brazil.git"
	},
	"bugs": {
		"url": "https://github.com/claudiosanches/woocommerce-extra-checkout-fields-for-brazil/issues"
	},
	"engines": {
		"node": ">=10.15.0",
		"npm": ">=6.4.1"
	},
	"devDependencies": {
		"@wordpress/scripts": "^5.0.0",
		"acorn": "^7.0.0",
		"cpy-cli": "^2.0.0",
		"del-cli": "^3.0.0",
		"grunt-wp-i18n": "1.0.3",
		"grunt-wp-readme-to-markdown": "2.0.1",
		"husky": "3.0.5",
		"lint-staged": "9.2.5",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"build": "del build && run-s -s build:js:* build:*",
		"build:css": "node-sass src/css --output=build/css --output-style=compressed",
		"build:js:admin": "wp-scripts build src/js/admin/admin.js --output-path=build/js/admin",
		"build:js:frontend": "wp-scripts build src/js/frontend/frontend.js --output-path=build/js/frontend",
		"build:js:orders": "wp-scripts build src/js/admin/shop-order.js --output-path=build/js/admin",
		"build:js:libs": "cpy 'jquery.mask' 'mailcheck' ../../build/js --parents --cwd=src/js",
		"check-licenses": "wp-scripts check-licenses",
		"lint": "run-s -s lint:*",
		"lint:css": "wp-scripts lint-style src",
		"lint:js": "wp-scripts lint-js src/js/admin src/js/frontend",
		"lint:js:fix": "npm run lint:js --silent -- --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-wordpress"
		]
	},
	"eslintConfig": {
		"extends": [
			"plugin:@wordpress/eslint-plugin/recommended"
		]
	},
	"npmPackageJsonLintConfig": {
		"extends": [
			"@wordpress/npm-package-json-lint-config"
		],
		"rules": {
			"valid-values-license": [
				"error",
				[
					"GPL-3.0+"
				]
			]
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.php": [
			"php -d display_errors=1 -l",
			"composer run-script phpcs-pre-commit"
		],
		"*.scss": [
			"stylelint --syntax=scss --fix",
			"git add"
		],
		"src/admin/*.js": [
			"eslint --fix",
			"git add"
		],
		"src/frontend/*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
